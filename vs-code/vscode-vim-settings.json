{
  "workbench.colorTheme": "Tokyo Night Storm",
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font'",
  "editor.minimap.enabled": false,
  "editor.fontSize": 18,
  "editor.fontFamily": "'JetBrainsMono Nerd Font'",
  "terminal.integrated.fontSize": 16,
  "workbench.startupEditor": "none",
  "window.menuBarVisibility": "toggle",
  "editor.stickyScroll.enabled": false,
  "breadcrumbs.enabled": false,
  "editor.lineNumbers": "relative",
  "editor.cursorSurroundingLines": 10,
  // "workbench.colorCustomizations": {
  //     "editor.findMatchBackground": "#7dcfff50",
  //     "editor.findMatchHighlightBackground": "#bb9af750",
  //     "editor.selectionBackground": "#7dcfff50",
  //     "editor.selectionHighlightBackground": "#bb9af750",
  //     "statusBar.background": "#24283B",
  //     "statusBar.noFolderBackground": "#24283B",
  //     "statusBar.debuggingBackground": "#24283B",
  //     "statusBar.foreground": "#ffffff",
  //     "statusBar.debuggingForeground": "#ffffff",
  //     "editor.linkedEditingBackground": "#ff0000",
  //     "editor.wordHighlightBackground": "#7aa2f783"
  // },
  // Smart relative lines
  "vim.smartRelativeLine": true,
  // Word Separators
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  // Yank to System Clipboard
  "vim.useSystemClipboard": true,
  // Highlight yanked text
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "#ff9e6470",
  "vim.highlightedyank.duration": 750,
  "editor.semanticHighlighting.enabled": true,
  "editor.guides.indentation": false,
  "editor.folding": false,
  "editor.glyphMargin": false,
  "zenMode.hideLineNumbers": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.selectionHighlight": false,
  "editor.renderLineHighlight": "none",
  // Leave insert mode with "jj"
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  // Status bar colors
  "vim.statusBarColors.easymotioninputmode": "",
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.insert": ["#24283b", "#c3e88d"],
  "vim.statusBarColors.commandlineinprogress": ["#24283B", "#ff9e64"],
  "vim.statusBarColors.normal": ["#24283B", "#565f89"],
  "vim.statusBarColors.visual": ["#24283B", "#BB9AF7"],
  "vim.statusBarColors.visualline": ["#24283B", "#BB9AF7"],
  "vim.statusBarColors.visualblock": ["#24283B", "#BB9AF7"],
  "vim.statusBarColors.searchinprogressmode": ["#24283B", "#ff9e64"],
  "workbench.colorCustomizations": {
    "statusBar.background": "#24283B",
    "statusBar.noFolderBackground": "#24283B",
    "statusBar.debuggingBackground": "#24283B",
    "statusBar.foreground": "#BB9AF7",
    "statusBar.debuggingForeground": "#BB9AF7"
  }
}

