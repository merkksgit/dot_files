#clear screen
alias cls='clear'

# Zoxide with FZF
alias ff='zi'

# Lazygit

alias lg='lazygit'

#rm with confirmation
#alias rm='rm -i'

#lsd aliases
alias ls='lsd -1'

alias l='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lt='ls --tree'

#nvim
alias nv='nvim'

#VScode
alias cc='code $(fzf)'

#history
alias hh='history | fzf +s --tac'

#fzf
alias nvf='nvim $(fzf -m --preview="batcat --color=always {}")'

#tmux
alias tmuxa='tmux attach'

#xsel
alias pbcopy='xsel --input --clipboard'
alias pbpaste='xsel --output --clipboard'

